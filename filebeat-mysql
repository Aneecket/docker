- add_tags:
    tags: [gibpl-stage]
    target: "environment"
processors:
- add_tags:
    tags: [gibpl-prod]
    target: "environment"
processors:
- add_tags:
    tags: [ifm-prod]
    target: "environment"


service filebeat restart

cron: 
0 * * * * /bin/truncate -s 0 /var/log/filebeat/filebeat
